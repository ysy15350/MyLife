<resources>

    <!--*********************************公共样式end*********************************-->

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!--填充顶部状态栏-->
    <!--<item name="android:windowTranslucentStatus">true</item>-->


    <!-- 对话框主题 -->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!--窗体公用样式-->
    <style name="base_form">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg_from</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 布局基本:相对布局、绝对布局 -->
    <style name="base_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 线性布局基本 -->
    <style name="base_layout_vertical" parent="base_layout">
        <item name="android:orientation">vertical</item>
    </style>

    <!-- 线性布局基本 -->
    <style name="base_layout_horizontal" parent="base_layout">
        <item name="android:orientation">horizontal</item>
    </style>

    <!-- 页面item样式，左右结构 -->
    <style name="base_layout_item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp60</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">@dimen/dp15</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
    </style>


    <!--内容文本-->
    <style name="text_content">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/text_content</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>

    <!--内容文本-->
    <style name="text_content_match_parent" parent="text_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>


    <!-- 文本输入框基本样式 -->
    <style name="base_edit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp60</item>
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/text_edit</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textSize">@dimen/sp14</item>
    </style>


    <!-- view分割线样式 -->
    <style name="view_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dp1</item>
        <item name="android:background">@color/devider_color</item>
    </style>

    <!-- view分割线样式短 -->
    <style name="view_line_short" parent="view_line">
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
    </style>

    <!-- view分割线样式 -->
    <style name="view_line_vertical">
        <item name="android:layout_width">@dimen/dp1</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/devider_color</item>
    </style>


    <!-- 弹窗菜单效果,底部出现向上 -->
    <style name="pop_anim_up">
        <item name="android:windowEnterAnimation">@anim/pop_up</item>
        <item name="android:windowExitAnimation">@anim/pop_down</item>
    </style>


    <!--*********************************公共样式end*********************************-->

    <!--主界面-->
    <!--菜单行-->
    <style name="main_menu_row" parent="base_layout_horizontal">
        <item name="android:layout_height">@dimen/dp95</item>
        <item name="android:layout_marginTop">@dimen/dp13</item>
    </style>

    <!--菜单列-->
    <style name="main_menu_col">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <!--菜单图标-->
    <style name="main_menu_icon">
        <item name="android:layout_width">@dimen/dp45</item>
        <item name="android:layout_height">@dimen/dp45</item>
        <item name="android:layout_marginLeft">@dimen/dp12</item>
    </style>


    <!-- 微信 -->


</resources>
